<div class='container p-4'>
  <div class='row'>
    {{#each links}}
      <div class="col-md-3">
        <div class="card text-center profile-container">
          <div class="card-body titulo-list">
            <a href="{{url}}" target="_blank" class="link">
              <h3 class="card-title text-uppercase link-t">
                {{title}}<i class="fa-solid fa-square-arrow-up-right m-2"></i>
              </h3>
            </a>
            <p class="m-2">{{timeago created_at}}</p>
            <p class="m-2">{{description}}</p>
            <a href="/links/delete/{{id}}" class="btn btn-danger">Delete Link<i class="fa-solid fa-trash m-2"></i></a>
            <a href="/links/edit/{{id}}" class="btn btn-secondary">Edit<i class="fa-solid fa-pen-to-square m-2"></i></a>
          </div>
        </div>
      </div>
      {{else}}
      <div class="col-m-d-4 mx-auto">
        <div class="card card-body text-center">
          <p>There are not links saved yet</p>
          <a href="/links/add">Create One</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>